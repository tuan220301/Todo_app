<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Todo_app;assembly=Todo_app" x:Class="Todo_app.Views.AddUser" BackgroundColor="#252525">

    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Padding="20">
            <Label Text="Add user" HorizontalOptions="Center" FontSize="30" TextColor="White" Margin="0,0,0,20" />
            <Frame BackgroundColor="#3B3B3B" Padding="10" CornerRadius="20" Margin="0,0,0,15">
                <local:MyEntry Placeholder="Username" PlaceholderColor="#ccc" TextColor="White" x:Name="name" FontSize="20" />
            </Frame>
            
            <Frame BackgroundColor="#3B3B3B" Padding="10" CornerRadius="20" Margin="0,0,0,15">
                <local:MyEntry Placeholder="Age" PlaceholderColor="#ccc" TextColor="White" x:Name="age" FontSize="20" />
            </Frame>
            <Frame BackgroundColor="#3B3B3B" Padding="10" CornerRadius="20" Margin="0,0,0,15">
                <local:MyDatePicker TextColor="White" x:Name="birthday" FontSize="20" />
            </Frame>
            <Frame BackgroundColor="#3B3B3B" Padding="10" CornerRadius="20" Margin="0,0,0,15">
                <local:MyEntry Placeholder="Gender" PlaceholderColor="#ccc" TextColor="White" x:Name="gender" FontSize="20" />
            </Frame>
            <StackLayout>
                <Button Text="Add User" CornerRadius="20" FontSize="20" Clicked="AddNewUser"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>