<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Todo_app.Views.AddNote">
    <ContentPage.ToolbarItems>

        <ToolbarItem IconImageSource="icon_save.png" Clicked="AddNewNote"/>

    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout BackgroundColor="#252525" Padding="10">
            <Label x:Name="ShowTitle"/>
            <!-- <Button Text="New line"/> -->
            <Frame BackgroundColor="#3B3B3B" Padding="15" CornerRadius="10">
                <StackLayout>
                    <Entry Placeholder="Title" PlaceholderColor="#ccc" TextColor="White" x:Name="NoteTitle" FontSize="30" />
                    <Editor Placeholder="Type something..." PlaceholderColor="#ccc" TextColor="white" AutoSize="TextChanges" Grid.Row="1" x:Name="NoteContent" />
                </StackLayout>
            </Frame>
            <Frame BackgroundColor="#3B3B3B" Padding="15" CornerRadius="10" Margin="0,15,0,0">
                <StackLayout>

                    <Label Text="Date" TextColor="White" FontSize="20" />
                    <DatePicker x:Name="datePicker" TextColor="White" />
                    <Label Text="Time" TextColor="White" FontSize="20"/>
                    <TimePicker x:Name="timePicker" TextColor="White"/>

                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>